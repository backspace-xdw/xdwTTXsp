# Server
PORT=8080
NODE_ENV=development

# JWT
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d

# Database - 支持高并发优化配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=gps_platform
DB_USER=root
DB_PASSWORD=your-password
# 数据库连接池 (生产环境建议 max=100)
DB_POOL_MAX=100
DB_POOL_MIN=10

# Redis - 缓存服务
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JT808 Server - GPS协议服务
JT808_PORT=8808
JT808_HEARTBEAT_TIMEOUT=180000

# JT1078 Server - 视频协议服务
JT1078_PORT=1078

# GPS Simulation (set to true to enable mock data)
ENABLE_GPS_SIMULATION=false

# CORS
CORS_ORIGIN=*

# ============================================
# 性能调优参数 (1万+车辆场景)
# ============================================

# 批处理配置
BATCH_GPS_BUFFER_SIZE=1000
BATCH_GPS_FLUSH_INTERVAL=2000
BATCH_REALTIME_BUFFER_SIZE=500
BATCH_REALTIME_FLUSH_INTERVAL=1000

# WebSocket 配置
WS_MAX_CONNECTIONS=10000
WS_MESSAGE_QUEUE_SIZE=1000

# 数据清理 (天数)
DATA_RETENTION_DAYS=90
